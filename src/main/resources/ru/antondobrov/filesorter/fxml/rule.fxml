<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.antondobrov.filesorter.controllers.RuleController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <Label fx:id="destinationPathLabel" text="%destination.path.label" HBox.hgrow="NEVER" />
            <TextField fx:id="destinationPathTextField" maxWidth="1.7976931348623157E308" promptText="%destination.path.text.field.placeholder" HBox.hgrow="ALWAYS" />
            <Button fx:id="choiceDestinationPathButton" mnemonicParsing="false" onAction="#onChoiceDestinationPathButtonClick" text="%choice.destination.path.button" HBox.hgrow="NEVER" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="10.0">
         <children>
            <Region maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <Button fx:id="deletePatternButton" mnemonicParsing="false" onAction="#onDeletePatternButtonClick" text="%delete.pattern.button" />
            <Button fx:id="addPatternButton" mnemonicParsing="false" onAction="#onAddPatternButtonClick" text="%add.pattern.button" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <TitledPane fx:id="patternsPane" maxHeight="1.7976931348623157E308" text="%patterns.list.header">
         <content>
            <ListView fx:id="patternsListView" editable="true" />
         </content>
      </TitledPane>
   </children>
</VBox>
