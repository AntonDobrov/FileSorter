<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="ru.antondobrov.filesorter.controllers.StartDirectoryPathPanelController">
   <children>
      <Label fx:id="startDirectoryPathLabel" text="%start.directory.path.label" />
      <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <TextField fx:id="startDirectoryPathTextField" maxHeight="1.7976931348623157E308"
               maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
               promptText="%start.directory.path.text.field.placeholder" HBox.hgrow="ALWAYS" />
            <Button fx:id="choiceStartDirectoryButton" mnemonicParsing="false"
               onAction="#onChoiceStartDirectoryButtonClick" text="%choice.start.directory.button" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>